{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "noImplicitAny": true,
    "strict": true,
    "removeComments": true,
    "sourceMap": false,
    "rootDir": "server",
    "outDir": "dist",
  },
  "include": [
    "server/**/*.*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}